@model Gear.ViewModels.ReceiptViewModel
@{
    ViewBag.Title = "Payment";
}


@if (Model != null)
{
    <div class="row">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Title</th>
                    <th class="text-center" scope="col">Amount</th>
                    <th class="text-center" scope="col">Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Gear.Models.CartItem item in Model.receipt.Cart.CartItems)
                {
                    <tr class="">
                        <td><span class="d-block">@item.Game.Name</span></td>
                        <td><span class="d-block text-center">@item.Amount</span></td>
                        @{
                            DateTime now = DateTime.Now;

                            Gear.Models.Discount hasDiscount = item.Game.Discounts.Where(d => d.ExpireDate > Model.receipt.CreateDate).Where(d => d.Code.Equals("GLOBAL")).FirstOrDefault();
                        }
                        @if (hasDiscount != null)
                        {
                            <td>
                                <span class="d-block text-center badge badge-success">-@hasDiscount.Modifier.ToString("#0.##%")</span>
                                <span class="d-block text-center badge badge-light">@(((item.Game.Price * hasDiscount.Modifier) * item.Amount).ToString("0.00")) EUR</span>
                            </td>
                        }
                        else
                        {
                            <td><span class="d-block text-center badge badge-light">@(item.Game.Price * item.Amount) EUR</span></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        @*@Url.Action("", "Store",new { cart = Model.Id })*@
        <b>Total: @Model.receipt.Total.ToString("0.00") EUR</b>
        <div class="ml-auto">
           
            <select class="custom-select-sm">
                @foreach (Gear.Models.PaymentType type in Model.paymentType)
                {
                    <option value="@type.Id">@type.Name</option>
                }
            </select>
            <a class="btn btn-primary" href="@(Url.Action("paidForItems","Store",new { cartId = Model.receipt.Cart_Id,  }))">Pay</a>
        </div>
    </div>
}
else
{
    <div class="row jumbotron">
        <h1 class="display-4">Receipt doesnt exist!</h1>
    </div>
}
