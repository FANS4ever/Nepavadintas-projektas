
@model Gear.ViewModels.StoreViewModel

@{
    ViewBag.Title = "Index";
}


<script language="javascript" type="text/javascript">
    var oldCallingElement = "pupularButton";
    var oldContentContainer = "popularTab";
    function selectTab(callingElement, contentContainer) {
        document.getElementById(oldCallingElement).classList.remove("active");
        document.getElementById(callingElement).classList.add("active");

        document.getElementById(oldContentContainer).hidden = true;
        document.getElementById(contentContainer).hidden = false;

        oldCallingElement = callingElement;
        oldContentContainer = contentContainer;
    }
</script>

<div class="row">
    <style>
        .showcase-wrapper {
        }

            .showcase-wrapper .button-next {
                display: inline-block;
                background:rgba(0,0,0,0.6);
                padding:20px 5px 20px 5px;
                margin: -4px;
                font-size: 20px;
                color:white;
                text-decoration: none;
                border-radius:2px;
            }

                .showcase-wrapper .button-next:hover {
                    background: rgba(0,0,0,0.7);
                    cursor: pointer;
                }

        .showcase-item {
            display: inline-grid;
            grid-template-rows: 1fr 1fr;
            grid-template-columns: max-content max-content max-content;
            cursor: pointer;
        }

            .showcase-item .image-wrapper {
                grid-column: 2;
                grid-row: 1/-1;
            }

                .showcase-item .image-wrapper .image {
                }


            .showcase-item .info-wrapper {
                grid-column: 2;
                grid-row: 2;
                align-self: flex-end;
                background-color: rgba(0,0,0,0.6);
                color: rgba(255,255,255,0.6);
                display: grid;
                grid-template-columns: 1fr max-content max-content;
                width: 100%;
            }

                .showcase-item .info-wrapper .text {
                    grid-column: 1;
                    padding: 4px;
                }

                    .showcase-item:hover .info-wrapper .text {
                        color:rgba(255,255,255,1);
                    }

                .showcase-item .info-wrapper .price {
                    grid-column: 3;
                    grid-row: 1;
                    padding: 4px;
                    margin-right: 5px;
                }

                    .showcase-item:hover .info-wrapper .price {
                        color: rgba(255,255,255,1);
                    }

                .showcase-item .info-wrapper .discount {
                    grid-column: 2;
                    grid-row: 1;
                    padding: 4px;
                    margin-right: 5px;
                    background-color: rgb(144, 255, 144,0.7);
                    color: rgba(0,0,0,0.6);
                }
                    .showcase-item:hover .info-wrapper .discount {
                        background-color: rgb(144, 255, 144,1);
                        color: rgba(0,0,0,1);
                    }
    </style>
    <h1 class="section-header">Featured</h1>
    <div class="showcase-wrapper row" onclick="window.location.href = '/game/agevalidation/'">
        <a id=" button-left" class="button-next"><</a>
        <div class="showcase-item">
            <div class="image-wrapper"><img class="image" src="@Model.Showcase[1].Picture.Directory" /></div>
            <div class="info-wrapper">
                <text class="text">@Model.Showcase[1].Game.Name</text>
                <text class="price">10.99$</text>
                <text class="discount">100%</text>
            </div>
        </div>
        <a id="button-right" class="button-next">></a>

        <div style="float:right;">
            Zona papildomom funkcijom
        </div>
    </div>
    <!-- game list prototype is done------------------------------------------------------------------------------------------------------------------------------>
    <h3 class="section-header">Find what you like</h3>
    <div class="game-list-wrapper row">
        <ul class="nav nav-tabs">
            <li id="pupularButton" class="active"><a onclick="selectTab('pupularButton', 'popularTab')">Popular</a></li>
            <li id="newestButton" class=""><a onclick="selectTab('newestButton','newestTab')">Newest</a></li>
            <li id="specialsButton" class=""><a onclick="selectTab('specialsButton','specialsTab')">Specials</a></li>
        </ul>
        <div class="game-list">
            <div id="popularTab">
                <style>
                    .game-list-wrapper {
                    }

                    .game-list {
                        margin-top: 5px;
                    }

                    .game-list-item {
                        display: grid;
                        grid-template-columns: max-content 1fr max-content;
                        margin: 0px 3px 5px 3px;
                        padding: 2px 5px 5px 5px;
                        border-bottom: 1px solid rgb(204,204,204,0.7);
                    }

                    .game-list-item:hover {
                        background-color: rgb(245,245,245);
                    }

                        .game-list-item .icon-wrapper {
                            max-width: 200px;
                            max-height: 113px;
                        }

                            .game-list-item .icon-wrapper .icon {
                                width: 100%;
                                height: 100%;
                                cursor:pointer;
                            }

                        .game-list-item .info-wrapper {
                            /*grid-area: info;*/
                            display: grid;
                            grid-template-rows: max-content auto max-content;
                            margin-left: 10px;
                            padding-bottom: 2px;
                            white-space: nowrap;
                            overflow: hidden;
                        }

                            .game-list-item .info-wrapper .title {
                                font-size: 20px;
                            }

                            .game-list-item .info-wrapper .title:hover {
                                text-decoration: underline;
                                cursor:pointer;
                            }

                            .game-list-item .info-wrapper .description {
                                font-size: 15px;
                            }

                            .game-list-item .info-wrapper .tags {
                                font-size: 12px;
                            }

                                .game-list-item .info-wrapper .tags .tag {
                                    border: 1px solid rgb(204,204,204);
                                    border-radius: 10px;
                                    padding: 2px;
                                }

                        .game-list-item .cart-wrapper {
                            /*grid-area: cart;*/
                            align-self: center;
                            display: grid;
                            grid-template-columns: 1fr 1fr;
                            grid-template-rows: 1fr 1fr;
                            text-align: center;
                            margin-left: 30px;
                            margin-right: 30px;
                        }

                            .game-list-item .cart-wrapper .price {
                                grid-row: 1;
                                grid-column: 2;
                                margin-left: 2px;
                            }

                            .game-list-item .cart-wrapper .discount {
                                grid-row: 1;
                                grid-column: 1;
                                margin-right: 2px;
                                background-color: lightgreen;
                                border-radius: 3px;
                            }

                            .game-list-item .cart-wrapper .cart-button {
                                grid-row: 2;
                                grid-column: 1/-1;
                            }
                </style>

                @for (int i = 0; i < 3; i++)
                {
                    <div class="game-list-item">
                        <div class="icon-wrapper">
                            <img class="icon" onclick="window.location.href = '/game/agevalidation/'" src=@(Model.Pupular[0].Picture.Directory)>
                        </div>
                        <div class="info-wrapper">
                            <div class="title" onclick="window.location.href = '/game/agevalidation/'">@(Model.Pupular[0].Game.Name)</div>
                            <div class="description">@(Model.Pupular[0].Game.Description) popular tab</div>
                            <div class="tags">
                                <a class="tag">Tag 1</a>
                                <a class="tag">Tag 2</a>
                                <a class="tag">Tag 3</a>
                            </div>
                        </div>
                        <div class="cart-wrapper">
                            <div class="price">10.99 $</div>
                            <div class="discount">100%</div>
                            <div class="cart-button"><a class="button">+ To cart</a></div>
                        </div>
                    </div>
                }
            </div>
            <div id="newestTab" hidden>
                @for (int i = 0; i < 3; i++)
                {
                    <div class="game-list-item">
                        <div class="icon-wrapper">
                            <img class="icon" onclick="window.location.href = '/game/agevalidation/'" src=@(Model.Pupular[0].Picture.Directory)>
                        </div>
                        <div class="info-wrapper">
                            <div class="title" onclick="window.location.href = '/game/agevalidation/'">@(Model.Pupular[0].Game.Name)</div>
                            <div class="description">@(Model.Pupular[0].Game.Description) newest tab</div>
                            <div class="tags">
                                <a class="tag">Tag 1</a>
                                <a class="tag">Tag 2</a>
                                <a class="tag">Tag 3</a>
                            </div>
                        </div>
                        <div class="cart-wrapper">
                            <div class="price">10.99 $</div>
                            <div class="discount">100%</div>
                            <div class="cart-button"><a class="button">+ To cart</a></div>
                        </div>
                    </div>
                }
            </div>
            <div id="specialsTab" hidden>
                @for (int i = 0; i < 3; i++)
                {
                    <div class="game-list-item">
                        <div class="icon-wrapper">
                            <img class="icon" onclick="window.location.href = '/game/agevalidation/'" src=@(Model.Pupular[0].Picture.Directory)>
                        </div>
                        <div class="info-wrapper">
                            <div class="title" onclick="window.location.href = '/game/agevalidation/'">@(Model.Pupular[0].Game.Name)</div>
                            <div class="description">@(Model.Pupular[0].Game.Description) special tab</div>
                            <div class="tags">
                                <a class="tag">Tag 1</a>
                                <a class="tag">Tag 2</a>
                                <a class="tag">Tag 3</a>
                            </div>
                        </div>
                        <div class="cart-wrapper">
                            <div class="price">10.99 $</div>
                            <div class="discount">100%</div>
                            <div class="cart-button"><a class="button">+ To cart</a></div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="row">
        <button style="text-align:center;" class="list-group-item" onclick="window.location.href = '/store/search/'">Search</button>
    </div>

</div>
