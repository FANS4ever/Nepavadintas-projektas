@model List<Gear.Models.Country> 

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<form method="post" class="col-6 mx-auto mt-2">

    <div class="form-group row">
        <div class="col">
            <label>Username</label>
            <input name="username" type="text" class="form-control" required />
        </div>
        <div class="col">
            <label>Email</label>
            <input name="email" type="email" class="form-control" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label>Password</label>
            <input name="password" type="password" class="form-control" required />
        </div>
        <div class="col">
            <label>Confirm password</label>
            <input name="confirm_password" type="password" class="form-control" required />
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label>Firstname</label>
            <input name="name" type="text" class="form-control" required/>
        </div>
        <div class="col">
            <label>Surename</label>
            <input name="surename" type="text" class="form-control" required/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label>Birthday</label>
            <input name="birthday" type="date" class="form-control mw-100" required />
        </div>
    </div>
    <div class="form-group">
        <label>Country</label>
        <select name="country" class="form-control custom-select mw-100" required>
            <option value="">Select your country</option>
            @foreach (Gear.Models.Country item in Model)
            {
                <option value="@item.Code">@item.Name</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary w-100">Register</button>
</form>
<script>
    var password = document.getElementById("password")
        , confirm_password = document.getElementById("confirm_password");

    function validatePassword() {
        if (password.value != confirm_password.value) {
            confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
            confirm_password.setCustomValidity('');
        }
    }

    password.onchange = validatePassword;
    confirm_password.onkeyup = validatePassword;
</script>