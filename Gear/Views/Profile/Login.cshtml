@model Gear.Models.User
<style>
    .form {
        display:grid; 
        grid-template-columns:max-content;
        margin-top: 10px;
        justify-content:center;
    }
    #fb-btn{
        margin-left: 150px;
        margin-top: 5px;
        
    }
</style>
<form class="form" method="post">

    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '492910391199405',
                cookie: true,
                xfbml: true,
                version: 'v3.2'
            });

            FB.getLoginStatus(function (response) {
                statusChangeCallback(response);
            });

        };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "https://connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        function statusChangeCallback(response) {
            if (response.status === 'connected') {
                //window.open('@Url.Action("Index", "ReportExecution")');
                console.log('logged in')

                FB.api('/me?fields=name', function (response) {
                    if (response && !response.error) {
                        var model = new Object();
                        
                        var jsonStr = JSON.stringify(response);

                        //var json = JSON.parse(response);
                        var objJSON = eval("(function(){return " + jsonStr + ";})()");
                        var values = objJSON.name.split(" ");
                        var name = values[0];
                        var surename = values[1];

                        model.name = name;
                        model.surename = surename;
                        console.log(model.name);
                        jQuery.ajax({
                            type: "POST",
                            url: "@Url.Action("LoginFB")",
                            dataType: "json",
                            contentType: "application/json; charset=utf-8",
                            data: JSON.stringify({ user: model }),
                            success: function (data) {
                                alert(data);
                            },
                            failure: function (errMsg) {
                                alert(errMsg);
                            }
                        });
                    }
                });
            } else {
                console.log('not authenticated')
            }
        }

        function checkLoginState() {
            FB.getLoginStatus(function (response) {
                statusChangeCallback(response);
            });
        }

    </script>

    <div class="form-group">
        <input type="text" class="form-control center-block" id="exampleInputEmail1" aria-describedby="emailHelp" name="username" placeholder="Enter username">
    </div>
    <div class="form-group">
        <input type="password" class="form-control center-block" id="exampleInputPassword1" name="password" placeholder="Password">
    </div>
    <div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </div>

    <fb:login-button id="fb-btn"
                     scope="public_profile,email"
                     onlogin="checkLoginState();">
    </fb:login-button>
    
</form>